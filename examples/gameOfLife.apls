#!/usr/local/bin/dyalogscript
rlDir ← '../link/',⍨⊃1⎕NPARTS''
rl ← 0⎕Fix rlDir,'raylib.apln'
rl.Init rlDir

rl.InitWindow 800 800 'abc'

board ←⍉⍪0 0 0 0 0 0 0
board ⍪← 0 1 0 0 0 0 0
board ⍪← 0 0 1 1 0 0 0
board ⍪← 0 1 1 0 0 0 0
board ⍪← 0 0 0 0 0 0 0
board ⍪← 0 0 0 0 0 0 0

cellSize ← 100
frame ← 0

:While ~rl.WindowShouldClose⍬
    frame (20|+)← 1
    :if frame = 0
        board ← ({≢⍸⍵}⌺3 3∊¨3+0,¨⊢)board
    :EndIf
    rl.BeginDrawing⍬
        {beginPos endPos←⍵
            size ← endPos-beginPos
            rl.DrawRectangle beginPos,size,⊂rl.color.yellow
        }¨cellSize×(-∘1,⍥⊂¨⊢) ⍸board
        rl.ClearBackground rl.color.gray
    rl.EndDrawing⍬
:EndWhile
rl.CloseWindow⍬
